.main-content__message#message{data: {id: message.id}}
  .main-content__message__group
    %p.main-content__message__group--member
      = message.user.name
    %p.main-content__message__group--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.main-content__message__content
    - if message.content.present?
      = message.content
  = image_tag message.image.url, class: 'main-content____message__image' if message.image.present?
